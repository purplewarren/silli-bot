# Staging Environment Configuration
# Copy this to .env and update with actual values

# Bot Configuration
TELEGRAM_BOT_TOKEN=your_staging_bot_token_here
REASONER_ENABLED=1
PWA_HOST=https://staging.silli.ai

# Dyad Registry
DYAD_REGISTRY_PATH=dyads/dyads.yaml

# Proactive Scheduler
PROACTIVE_CRON_S=10800

# Reasoner Configuration
REASONER_BASE_URL=http://reasoner:11434
REASONER_MODEL_HINT=gpt-oss-20b
REASONER_TEMPERATURE=0.7
REASONER_TIMEOUT_S=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/silli_bot_staging.log

# Data Storage
DATA_DIR=data
KEEP_RAW_MEDIA=false

# Webhook Configuration
WEBHOOK_URL=https://staging.silli.ai/webhook
WEBHOOK_SECRET=your_webhook_secret_here
